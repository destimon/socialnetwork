<% layout('/layouts/layout') -%>
 
<html>
<head>
  <title><%=user.local.login%></title>
  <link rel="stylesheet" href="/style/account.css">
</head>
<body>

  <div class="row">

    <div class="col-sm-6">
      <p class="h1"><%= user.local.name %> <%=user.local.surname %></p>
      <image src="/go=<%=user.local.login%>/avatar" id="avatar" class="image img-circle"></image>
    </div>

    <div class="col-sm-6">
    	

    </div>
  </div>

	<hr>

  <div class="row"> 	

    <ul class="list-group">
      
      <div class="col-sm-6">
     	  <li class="list-group-item">ID: <%= user._id %></li>
  	 	  <li class="list-group-item">LOGIN: <%= user.local.login %></li>
    	  <li class="list-group-item">Date Of Birth: <%= user.local.dob %></li>
        <li class="list-group-item">Gender: <%= user.local.gender %></li>
      </div>

          
      <div class="col-sm-6">
        <li class="list-group-item">
          <p>О себе:</p>

          <% if (user.local.about) { %>
            <p><%=user.local.about%></p>
          <% } %>
        </li>
      </div>
  
    </ul>

  </div>	

</body>
</html>
