<% layout('/layouts/layout') -%>

<html>
<head>
	<% if(user.login !== undefined) { %>
		<title><%=user.login%></title>
	<% } else { %>
		<title>MixBox!</title>
	<% } %>
	<link rel="stylesheet" href="/style/account.css">
	<link rel="stylesheet" href="/style/loader.css">
</head>
<body>
	<!-- Information -->
	<div class="container">
		<div class="row">
			<div class="col-sm-4">
				<p class="h3">Information</p>
					<p class="h4">
						<div class="row">
							<div class="col-sm-5">
								<p>Login:</p>
								<p>Date of birth:</p>
								<p>Gender:</p>
							</div>

							<div class="col-sm-3">
								<p><%= user.login %></p>

								<% if(user.dob) { %>
								<p><%= user.dob %></p>
								<% } else { %>
									<p>N/A</p>
								<% } %>

								<% if(user.gender) { %>
								<p><%= user.gender %></p>
								<% } else { %>
									<p>N/A</p>
								<% } %>
							</div>
						</div>
					</p>

					<hr>

					<div class="row">
						<div class="col-sm-12">
							<% if(user.about !== undefined) { %>
								<p class="h3">About:</p>
								<p class="h4">
										<%=user.about%>
								</p>
							<% } %>
						</div>
					</div>
				</div>


			<div class="col-sm-6">
				<% if(user.name) { %>
					<% if(user.surname) { %>
						<p class="h1"><%= user.name %> <%= user.surname %></p>
					<% } %>
				<% } %>
				<image src="/usr/<%=user.login%>/avatar" id="avatar" class="image img-circle"></image>
			</div>

			<div class="col-sm-2">
				<div id="onlineBar">
					{{ onlineStatus }}
				</div>
			</div>

			<% if (mydata) { %>
				<% if (mydata !== user) { %>
					<div class="row">
						<div class="col-sm-4 col-sm-offset-4">
							<form method="getuser" data-remote="true">
								<button type="submit" class="btn">Follow</button>
								<button type="button" class="btn btn disabled">Write</button>
							</form>
						</div>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>

	<hr>

	<!-- Blog -->


		<% if (mydata) { %>
			<% if (mydata == user) { %>
					<div class="col-sm-4" id="postblock">
						<p class="h1">What's up?</p>
							<form id="create_post_form">
								<div class="form-group">
									<input class="form-control" name="text" id="text" type="text">
									<hr>
									<input type="button" v-on:click="postFeed" class="btn btn-success" value="Confirm"></input>
								</div>

								<div v-if="loading == true">
									<p>{{message}}</p>
									<div class="loader"></div>
								</div>

							</form>
					</div>
			<% } %>
		<% } %>

			<div class="col-sm-offset-4">
				<h1>Published</h1>
					<div id="blog">
						<div v-if="loading == true" class="loader">
						</div>

						<div v-else-if="loading == false" class="row">
							<div class="col-sm-10">
								<post-list v-bind:posts="posts"></post-list>
								<button v-on:click="showMore" v-if="buttonStatus == true">Show more</button>
							</div>
						</div>
					</div>
			</div>

	<!-- LIST OF POSTS -->
	<script type="text/x-template" id="postList_template">
			<table class="table">
					<div class="list-group" v-for="p in posts">
							<img class="img img-circle" v-bind:src="' ' + p.avalink" id="avatarsmall">
							<h2><a :href="'/usr/' + p.author">{{ p.author }}</a></h2>
							<h6>{{ p.date }}</h6>
						<blockquote>
							<p>{{ p.text }}</p>
						</blockquote>
					</div>
			</table>
	</script>

	<script src='/js/feedcontent.js'></script>

	<!-- TEMPLATES -->
	<script src='/js/postlist.js'></script>
</body>
</html>
