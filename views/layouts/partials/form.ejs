
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

        <!-- LOGIN FORM -->
        
            <div class="form-group">
                <label>Логин</label>
                <input type="text" class="form-control" name="login" value="<%=mydata.login%>">
            </div>
            <div class="form-group">
                <% if ( mydata.password == "" ) { %> 
                    <label>Пароль</label>
                    <input type="password" class="form-control" name="passw">
                <% } %>
            </div>
            <div class="form-group">
                <label>Имя</label>
                <input type="name" class="form-control" name="name" value="<%=mydata.name%>">
                <label>Фамилия</label>
                <input type="surname" class="form-control" name="surname" value="<%=mydata.surname%>">
            </div>
            <div class="form-group">
                <div class="form-group">
                  <label>Дата рождения</label>
                  <input type="date" class="form-control" name="dob" placeholder="Date of Birth" value="<%=mydata.dob%>">
                </div>
            </div>
                <div class="form-group">
            <strong>Пол</strong>
            <br>
                <label class="radio-inline"><input type="radio" name="gender" value="Мужской">Мужской</label>
                <label class="radio-inline"><input type="radio" name="gender" value="Женский">Женский</label>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">OK</button>
        
