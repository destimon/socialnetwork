
<!-- show any messages that come back with authentication -->
<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<!-- LOGIN FORM -->

<div class="form-group">
    <label>Login</label>
    <input type="text" class="form-control" name="login" value="<%=mydata.login%>">
</div>
<div class="form-group" id="password_form">
    <% if ( mydata.password == "" ) { %>
        <label>Password</label>
        <input type="password" class="form-control" v-model="pass" name="password">
        <p :class="status"> {{ valid }} </p>
    <% } %>
</div>
<div class="form-group">
    <label>Name</label>
    <input type="name" class="form-control" name="name" value="<%=mydata.name%>">
</div>
<div class="form-group">
  <label>Surname</label>
  <input type="surname" class="form-control" name="surname" value="<%=mydata.surname%>">
</div>
<div class="form-group">
    <div class="form-group">
      <label>Date of birth</label>
      <input type="date" class="form-control" name="dob" placeholder="Date of Birth" value="<%=mydata.dob%>">
    </div>
</div>
    <div class="form-group">
<strong>Gender</strong>
<br>
    <label class="radio-inline"><input type="radio" name="gender" value="Мужской">Male</label>
    <label class="radio-inline"><input type="radio" name="gender" value="Женский">Female</label>
</div>

<button type="submit" class="btn btn-warning btn-lg">Confirm</button>
