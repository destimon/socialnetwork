        </ul>
      </div>
    </nav>


<!-- BODY -->

<div class="container">

  <div class="thumbnail" id="middle">
	
    <div class="row">

    <div class="col-sm-4">
    
     <strong>Все:</strong>
     
     <% users.forEach(function(user){ %>
       <div id="user">
        <image src="/img/no_avatar.jpg" id="avatar" class="image img-circle"><strong><%= user.local.name %> <%=user.local.surname %></strong></image>
        <a href="/go=<%=user.local.login%>"> (<%= user.local.login %>)</a>

       </div>

     <%})%>
    
    </div>

    <div class="col-sm-4">
     <strong>Добавленные:</strong>

    </div>
  </div>
</div>

</body>
